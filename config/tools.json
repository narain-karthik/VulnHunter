  "installation_scripts": {
    "debian_ubuntu": {
      "name": "Debian/Ubuntu Installation Script",
      "commands": [
        "sudo apt-get update",
        "sudo apt-get install -y nmap masscan netdiscover arp-scan fping hping3 traceroute",
        "sudo apt-get install -y nikto dirb gobuster sqlmap whatweb",
        "sudo apt-get install -y sslscan openssl",
        "sudo apt-get install -y curl jq git wget whois dnsutils netcat",
        "sudo apt-get install -y hydra john hashcat",
        "pip3 install wfuzz wafw00f awscli scoutsuite prowler-cloud",
        "go install github.com/ffuf/ffuf@latest",
        "go install -v github.com/projectdiscovery/nuclei/v2/cmd/nuclei@latest"
      ]
    },
    "centos_rhel": {
      "name": "CentOS/RHEL Installation Script",
      "commands": [
        "sudo yum update -y",
        "sudo yum install -y epel-release",
        "sudo yum install -y nmap masscan fping hping3 traceroute",
        "sudo yum install -y nikto dirb whatweb",
        "sudo yum install -y openssl curl wget bind-utils nc",
        "pip3 install wfuzz wafw00f awscli sqlmap gobuster",
        "go install github.com/ffuf/ffuf@latest",
        "go install -v github.com/projectdiscovery/nuclei/v2/cmd/nuclei@latest"
      ]
    },
    "kali_linux": {
      "name": "Kali Linux (Most tools pre-installed)",
      "commands": [
        "sudo apt-get update",
        "sudo apt-get upgrade -y",
        "pip3 install scoutsuite prowler-cloud",
        "go install github.com/ffuf/ffuf@latest",
        "go install -v github.com/projectdiscovery/nuclei/v2/cmd/nuclei@latest"
      ]
    }
  },
